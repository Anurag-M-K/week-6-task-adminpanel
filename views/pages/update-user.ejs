<section>
    <div class="container">
        <div class="row">
  
            <div class="col-md-6">
                <h2 class="text-center">Update User</h2>
                <form action="/admin/update-user/<%= user._id %>" method="post">
                    <label for="">First Name</label>
                    <input type="text" name="userFname"  value="<%= user.userFname %>" class="form-control">
  
                    <label for="">Last Name</label>
                    <input type="text" name="userLname"  value="<%= user.userLname %>"class="form-control">
                    
                    <label for="">Email</label>
                    <input type="email" name="userEmail" value="<%= user.userEmail %>" class="form-control">
  
                    <label for="">Username</label>
                    <input type="text" name="username" value="<%= user.username %>" class="form-control">
  
                    <label for="">Password</label>
                    <input type="password" name="password" class="form-control">
  
                    <label for="">Confirm Password</label>
                    <input type="password" name="confirm_password" class="form-control">
  
                    <button type="submit" class="btn btn-success mt-4">Submit</button>
                </form>
            </div>
        </div>
    </div>
  </section>